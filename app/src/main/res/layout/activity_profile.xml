<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".profile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="254dp"
            android:layout_height="161dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:contentDescription="profileImage"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="32dp"
            android:text="Set your profile image"
            android:textColor="#120101"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/profileImage"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toStartOf="@+id/profileImage"
            app:layout_constraintTop_toBottomOf="@+id/profileImage" />

        <EditText
            android:id="@+id/uName"
            android:layout_width="365dp"
            android:layout_height="68dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#1C0202"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/preciseLocationDisplayFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Gender:"
            android:textColor="#190101"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/uName"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="@+id/uName"
            app:layout_constraintTop_toBottomOf="@+id/uName" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="274dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/preciseLocationDisplayFrag"
            app:layout_constraintTop_toBottomOf="@+id/uName">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Male"
                android:textColor="#311B92"
                app:buttonTint="#0021FF"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Female"
                android:textColor="#4E342E"
                app:buttonTint="#CA0DFF" />

            <RadioButton
                android:id="@+id/Other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Other"
                android:textColor="#100F0F"
                app:buttonTint="#0A0B0A" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Age:"
            android:textColor="#0C0C0C"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/preciseLocationDisplayFrag"
            app:layout_constraintHorizontal_bias="0.379"
            app:layout_constraintStart_toStartOf="@+id/preciseLocationDisplayFrag"
            app:layout_constraintTop_toBottomOf="@+id/preciseLocationDisplayFrag" />

        <EditText
            android:id="@+id/nameID"
            android:layout_width="219dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Enter your Age"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#170101"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="28dp"
            android:text="Are You a"
            android:textColor="#250404"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/nameID" />

        <RadioGroup
            android:id="@+id/occupation"
            android:layout_width="240dp"
            android:layout_height="104dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.219"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/nameID">

            <RadioButton
                android:id="@+id/jobPerson"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:checked="true"
                android:text="Job Person/Business Man"
                android:textColor="#201E1E"
                android:textSize="16sp"
                app:buttonTint="#171616" />

            <RadioButton
                android:id="@+id/student"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                android:text="Student"
                android:textColor="#090808"
                android:textSize="16sp"
                app:buttonTint="#151414" />

        </RadioGroup>

        <EditText
            android:id="@+id/userBio"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Write About Yourself...(Hobbies/Interests..etc)"
            android:inputType="textMultiLine"
            android:paddingTop="20dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textColorHint="#171515"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/smokeGrp"
            app:layout_constraintStart_toStartOf="@+id/smokeGrp"
            app:layout_constraintTop_toBottomOf="@+id/smokeGrp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="100dp"
            android:text="Are you "
            android:textColor="#100F0F"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <RadioGroup
            android:id="@+id/habits"
            android:layout_width="234dp"
            android:layout_height="144dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/occupation"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/occupation">

            <RadioButton
                android:id="@+id/alcoholic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Alcoholic"
                android:textColor="#221F1F"
                android:textSize="16sp"
                app:buttonTint="#171616" />

            <RadioButton
                android:id="@+id/nonAlcoholic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non-Alcoholic"
                android:textColor="#100F0F"
                android:textSize="16sp"
                app:buttonTint="#171515" />

            <RadioButton
                android:id="@+id/occasionally"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occasionally"
                android:textColor="#090909"
                android:textSize="16sp"
                app:buttonTint="#0C0C0C" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:text="Do you have a Room available for rent?"
            android:textColor="#0C0202"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/habits" />

        <RadioGroup
            android:id="@+id/roomAvail"
            android:layout_width="374dp"
            android:layout_height="66dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:textColor="#000000"
                app:buttonTint="#1B1717" />

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="No"
                android:textColor="#1C1C1C"
                app:buttonTint="#100F0F" />
        </RadioGroup>

        <Button
            android:id="@+id/setProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:text="set profile"
            android:textColor="#E6E2E2"
            app:backgroundTint="#171616"
            app:cornerRadius="45dp"
            app:layout_constraintEnd_toEndOf="@+id/preciseLocation"
            app:layout_constraintStart_toStartOf="@+id/preciseLocation"
            app:layout_constraintTop_toBottomOf="@+id/preciseLocation" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Are You a?"
            android:textColor="#1E1C1C"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/roomAvail"
            app:layout_constraintStart_toStartOf="@+id/roomAvail"
            app:layout_constraintTop_toBottomOf="@+id/roomAvail" />

        <RadioGroup
            android:id="@+id/smokeGrp"
            android:layout_width="380dp"
            android:layout_height="51dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <RadioButton
                android:id="@+id/smkYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Smoker"
                android:textColor="#131212"
                app:buttonTint="#121111" />

            <RadioButton
                android:id="@+id/smkNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Non-Smoker"
                android:textColor="#131313"
                app:buttonTint="#100F0F" />

            <RadioButton
                android:id="@+id/smkOcass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Occasionally"
                android:textColor="#131111"
                app:buttonTint="#171414" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enter Your city name"
            android:textColor="#101010"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/userBio"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/userBio"
            app:layout_constraintTop_toBottomOf="@+id/userBio" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="277dp"
            android:layout_height="69dp"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <EditText
            android:id="@+id/preciseLocation"
            android:layout_width="282dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Please enter your precise location"
            android:inputType="textMultiLine"
            android:textColorHint="#0E0D0D"
            app:layout_constraintEnd_toEndOf="@+id/spinner"
            app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
